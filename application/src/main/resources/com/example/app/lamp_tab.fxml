<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:id="lampRoot" fx:controller="com.example.app.LampTabController" spacing="10">
    <TitledPane text="Lamp &amp; Plug" expanded="true">
        <VBox spacing="10">
            <HBox spacing="10">
                <Button text="Lamp ON" fx:id="lampOnBtn" onAction="#handleLampOn"/>
                <Button text="Lamp OFF" fx:id="lampOffBtn" onAction="#handleLampOff"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Plug ON" fx:id="plugOnBtn" onAction="#handlePlugOn"/>
                <Button text="Plug OFF" fx:id="plugOffBtn" onAction="#handlePlugOff"/>
            </HBox>
            <Label text="Lamp Status:"/>
            <HBox spacing="10">
                <Label fx:id="lampStatusLabel" text="Unknown"/>
                <ImageView fx:id="lampImageView" fitWidth="50" fitHeight="50"/>
            </HBox>
            <Label text="Plug Status:"/>
            <HBox spacing="10">
                <Label fx:id="plugStatusLabel" text="Unknown"/>
                <ImageView fx:id="plugImageView" fitWidth="50" fitHeight="50"/>
            </HBox>
        </VBox>
    </TitledPane>
</VBox>
