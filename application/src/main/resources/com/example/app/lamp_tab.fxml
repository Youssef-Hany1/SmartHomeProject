<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="lampRoot" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.app.LampTabController">
    <children>
        <VBox spacing="20" layoutX="20" layoutY="20" prefWidth="600">
            <!-- Title -->
            <Label text="Lamp &amp; Plug Control"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Separator/>

            <!-- Lamp Controls -->
            <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
                <Label text="Lamp Controls:"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                <Button text="Lamp ON" fx:id="lampOnBtn" onAction="#handleLampOn"
                        GridPane.rowIndex="1" GridPane.columnIndex="0"
                        style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Lamp OFF" fx:id="lampOffBtn" onAction="#handleLampOff"
                        GridPane.rowIndex="1" GridPane.columnIndex="1"
                        style="-fx-font-size: 14px; -fx-background-color: #F44336; -fx-text-fill: white;"/>
            </GridPane>

            <!-- Lamp Status -->
            <HBox spacing="20" alignment="center">
                <VBox spacing="5">
                    <Label text="Lamp Status:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label fx:id="lampStatusLabel" text="Unknown"
                           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                </VBox>
                <ImageView fx:id="lampImageView" fitWidth="150" fitHeight="150"/>
            </HBox>
            <Separator/>

            <!-- Plug Controls -->
            <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
                <Label text="Plug Controls:"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                <Button text="Plug ON" fx:id="plugOnBtn" onAction="#handlePlugOn"
                        GridPane.rowIndex="1" GridPane.columnIndex="0"
                        style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Plug OFF" fx:id="plugOffBtn" onAction="#handlePlugOff"
                        GridPane.rowIndex="1" GridPane.columnIndex="1"
                        style="-fx-font-size: 14px; -fx-background-color: #F44336; -fx-text-fill: white;"/>
            </GridPane>

            <!-- Plug Status -->
            <HBox spacing="20" alignment="center">
                <VBox spacing="5">
                    <Label text="Plug Status:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label fx:id="plugStatusLabel" text="Unknown"
                           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                </VBox>
                <ImageView fx:id="plugImageView" fitWidth="150" fitHeight="150"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
